# Security Configuration Template
# Copy this to .env and fill in with secure values

# Database Configuration
# Use strong passwords with mixed characters
DATABASE_URL="mysql://user:CHANGE_THIS_PASSWORD@host:3306/database"
DB_ROOT_PASSWORD=CHANGE_THIS_ROOT_PASSWORD
DB_NAME=your_database_name
DB_USER=your_db_user
DB_PASSWORD=CHANGE_THIS_DB_PASSWORD

# NextAuth Configuration
# Generate with: openssl rand -hex 32
NEXTAUTH_SECRET=CHANGE_THIS_TO_RANDOM_64_CHAR_HEX
NEXTAUTH_URL=https://your-domain.com

# Application Configuration
# Generate with: openssl rand -hex 32
UPLOAD_ENCRYPTION_KEY=CHANGE_THIS_TO_RANDOM_64_CHAR_HEX
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# CORS Configuration
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Domain Configuration
DOMAIN_NAME=your-domain.com
ACME_EMAIL=your-email@domain.com

# Monitoring (Optional)
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD

# Redis Configuration (Optional)
REDIS_URL=redis://redis:6379

# Maintenance Mode
MAINTENANCE_MODE=false

# Environment
NODE_ENV=production

# Security Best Practices:
# 1. Never commit .env to Git
# 2. Use different secrets for each environment
# 3. Rotate secrets regularly
# 4. Use strong, random passwords (min 32 characters)
# 5. Store production secrets in secure vault (e.g., AWS Secrets Manager)
