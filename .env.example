# Database Configuration
DATABASE_URL="mysql://username:password@host:port/database"

# Encryption Keys (Generate with: openssl rand -hex 32)
SECRET_KEY=your_64_character_hex_key_here_32_bytes
NEXT_PUBLIC_ENCRYPTION_KEY=your_64_character_hex_key_here_32_bytes
UPLOAD_ENCRYPTION_KEY=your_64_character_hex_key_here_32_bytes

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here_generate_with_openssl

# Image Upload Path
IMAGE_PATH=/app/uploads

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_app_password_here

# Booking System Configuration
BOOKING_SYSTEM_OPEN=true
CRON_SECRET=your_cron_secret_here_generate_with_openssl

# reCAPTCHA Configuration
# Get keys from: https://www.google.com/recaptcha/admin
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Security Settings
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX_REQUESTS=5

# Node Environment
NODE_ENV=development
